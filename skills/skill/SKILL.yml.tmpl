# SKILL.yml â€” Instance of a skill being developed
# Template from skills/skill/

protocol: SIP/0.1
skill_id: "{{skill_id}}"

skill:
  name: "{{skill_name}}"
  description: "{{description}}"
  created: "{{timestamp}}"
  author: "{{author}}"
  
tier: {{tier}}  # 0=knowledge, 1=file, 2=execute

# PROTOTYPE INHERITANCE
# This skill builds on:
prototypes:
  - skills/skill  # The meta-skill (you're here)
  # Add more as needed:
  # - skills/room
  # - skills/character

# TOOLS THIS SKILL NEEDS
allowed_tools:
  - read_file
  - write_file
  # Add if tier 2+:
  # - run_terminal_cmd
  # - grep

# PROTOCOL (K-LINE NAME)
# What single word or phrase invokes this skill?
protocol: "{{PROTOCOL_NAME}}"

# RELATED SKILLS
related:
  # - skill-name

# TEMPLATES THIS SKILL PROVIDES
templates: []
  # - INSTANCE.yml.tmpl
  # - RESULT.md.tmpl

# INSTANTIATION NOTES
# {{notes}}
